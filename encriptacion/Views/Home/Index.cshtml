@model encriptacion.Models.Mensaje
@{
    ViewData["Title"] = "Home Page";
}

<h4>Mensaje</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Texto" class="control-label"></label>
                <input asp-for="Texto" class="form-control" />
                <span asp-validation-for="Texto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Procesar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@if (!string.IsNullOrEmpty(Model.Salida))
{
    <h3>Salida</h3>
    <p> @Model.Salida </p>
}